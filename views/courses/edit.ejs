<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

<div class="container">
    <h1>Edit Page</h1>
    <form action="/course_update/<%= d._id %>" method="post">
        <div class="mb-3">
          <label>Name:</label>
          <input type="text" name="name" class="form-control" value="<%= d.name %>">
        </div>
        <div class="mb-3">
          <label>Email:</label>
          <input type="email" name="email" class="form-control"value="<%= d.email %>">
        </div>
        <div class="mb-3">
          <label>Mobile Number:</label>
          <input type="number" name="number" class="form-control"value="<%= d.number %>">
        </div>
        <div class="mb-3">
          <label>Address:</label>
          <textarea row="5" cols="30" class="form-control" name="address"><%= d.address %></textarea>
        </div>
        <div class="mb-3">
          <label>Gender:</label>
          <input class="form-check-input" type="radio" name="gender" id="flexRadioDefault1" value="male" <%= d.gender =='male'?'checked':'' %>>
          <label class="form-check-label" for="flexRadioDefault1">Male</label>
          <input class="form-check-input" type="radio" name="gender" id="flexRadioDefault1" value="female"  <%= d.gender =='female' ? 'checked':'' %>>
          <label class="form-check-label" for="flexRadioDefault1">Female</label>
        </div>
        <div class="mb-8">
          <label>Qualifications:</label>
          <select class="form-control" name="qualification">
              <option >Please Select</option>
              <option <%= d.qualification =='10th'?'selected':''%>>10th</option>
              <option <%= d.qualification =='12th'?'selected':''%>>12th</option>
              <option <%= d.qualification =='B.C.A'?'selected':''%>>B.C.A</option>
          </select>   
        </div>
        <div class="mb-8">
          <label>Branch:</label>
          <select class="form-control">
              <option value="1">Please Select</option>
              <option value="2">Cse</option>
              <option value="3">IT</option>
              <option value="4">EC</option>
          </select>   
        </div>
        <div class="mb-3">
          <label>Course</label>
          <input type="text" value="btech" name="course" class="form-control" readonly>
        </div>
        
        <div class="text-center"><input type="submit" value="Update"></div>



        
        

      </div>
</div>